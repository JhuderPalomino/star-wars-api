{
  "name": "star-wars-api",
  "version": "1.0.0",
  "description": "A simple API to manage Star Wars characters using Serverless Framework, TypeScript, and AWS Lambda.",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "lint": "eslint . --ext .ts,.js",
    "prettier": "prettier --write .",
    "test": "jest --runInBand --coverage",
    "start:local": "nodemon -e js  --exec \" serverless offline start --stage dev --region us-east-2\"",
    "deploy:dev": "serverless deploy --stage dev --region us-east-2"
  },
  "dependencies": {
    "axios": "^1.8.2",
    "date-fns": "^2.30.0",
    "http-status": "^1.6.2",
    "lambda-api": "^1.2.0",
    "mysql2": "^3.9.8",
    "redis": "^4.6.7"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.2",
    "@types/aws-lambda": "^8.10.116",
    "@types/jest": "^29.5.2",
    "@types/mysql": "^2.15.21",
    "@types/node": "^20.2.5",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "eslint": "^8.42.0",
    "jest": "^29.5.0",
    "jest-junit": "^16.0.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "serverless-offline": "^13.9.0"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/JhuderPalomino/star-wars-api.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/JhuderPalomino/star-wars-api/issues"
  },
  "homepage": "https://github.com/JhuderPalomino/star-wars-api#readme"
}
